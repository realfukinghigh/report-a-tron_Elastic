# create asset
POST reportatron/_doc
{
	"asset_stuff": {
		"asset_name": "<assetName>",
		"asset_type": "<assetType>",
		"asset_owner": "<assetOwner>",
		"asset_notes": "<assetNotes>",
		"asset_internet_facing": <1/0>
	  }
}

# create engagement
POST reportatron/_doc
{
	"engagement_stuff": {
		"asset_id": "<asset _id>",
		"engagement_form_location": "<engFormLocation>",
		"engagement_contact": "<engContact>",
